{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react",
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
  },
  "include": ["./src"]
}
